def busqueda_binaria(lista, objetivo, inicio, fin):
    if inicio > fin:
        return -1  # Elemento no encontrado

    medio = (inicio + fin) // 2

    if lista[medio] == objetivo:
        return medio
    elif lista[medio] > objetivo:
        return busqueda_binaria(lista, objetivo, inicio, medio - 1)
    else:
        return busqueda_binaria(lista, objetivo, medio + 1, fin)

# Ejemplo de uso
lista_ordenada = [1, 3, 5, 7, 9, 11, 13, 15]
objetivo = 7
resultado = busqueda_binaria(lista_ordenada, objetivo, 0, len(lista_ordenada) - 1)

if resultado != -1:
    print(f"Elemento encontrado en la posici√≥n {resultado}")
else:
    print("Elemento no encontrado")
